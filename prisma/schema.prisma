// This is your Prisma schema file
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  color        String
  order        Int           @default(0)
  valuationOrder Int           @default(0)
  isValuationTarget Boolean    @default(true)
  isCash       Boolean       @default(false)
  isLiability  Boolean       @default(false)
  parentId     Int?
  parent       Category?     @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children     Category[]    @relation("CategoryHierarchy")
  tags         CategoryTag[]
  assets       Asset[]
  transactions Transaction[]

  @@index([parentId])
}

model TagGroup {
  id     Int           @id @default(autoincrement())
  name   String
  order  Int           @default(0)
  options TagOption[]
  assetTags CategoryTag[]
}

model TagOption {
  id         Int        @id @default(autoincrement())
  name       String
  order      Int        @default(0)
  tagGroupId Int
  tagGroup   TagGroup   @relation(fields: [tagGroupId], references: [id], onDelete: Cascade)
  categoryTags CategoryTag[]

  @@index([tagGroupId])
}

model CategoryTag {
  categoryId  Int
  tagGroupId  Int
  tagOptionId Int

  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  tagGroup   TagGroup  @relation(fields: [tagGroupId], references: [id], onDelete: Cascade)
  tagOption  TagOption @relation(fields: [tagOptionId], references: [id], onDelete: Cascade)

  @@id([categoryId, tagGroupId])
  @@index([tagGroupId])
  @@index([tagOptionId])
  @@index([categoryId])
}

model Asset {
  id           Int      @id @default(autoincrement())
  categoryId   Int
  currentValue Float
  recordedAt   DateTime @default(now())
  category     Category @relation(fields: [categoryId], references: [id])
}

model Transaction {
  id           Int             @id @default(autoincrement())
  categoryId   Int
  type         TransactionType
  amount       Float
  transactedAt DateTime        @default(now())
  memo         String?
  category     Category        @relation(fields: [categoryId], references: [id])
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  VALUATION
}
